<% include ../html-template/header.ejs %>
    <!--HTML Header-->
    <div class="container">
        <div class="row">
            <div id="wrapper">
                <h1> Edit </h1>
                <!-- send Post Request of whatever value inside of name="campground"  -->
                <div class="form-camp">
                    <form action="/campgrounds/<%= commentID %>/comments/<%=comment._id%>?_method=PUT>" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                        </div>

                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit</button>
                        </div>
                    </form>
                    <a href="/campgrounds">Go back</a>
                </div>
                <!-- end div#wrapper -->
            </div>
        </div>
    </div>

