<% include ../html-template/header %>
  <!--HTML Header-->
  <div class="container">
    <div class="row">
      <h1 style="text-align: center"> Edit <%= campground.name %> </h1>
      <!-- send Post Request of whatever value inside of name="campground"  -->
      <div style="width: 50%; margin: 25px auto;">

        <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="camground[name]" value="<%=campground.name%>">
          </div>

          <div class="form-group">
            <input class="form-control" type="text" name="camground[image]" value="<%= campground.image %>">
          </div>

          <div class="form-group">
            <input class="form-control" type="text" name="camground[description]" value="<%= campground.description %>">
          </div>

          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>
        </form>
        <a href="/campgrounds">Go back</a>
      </div>
      <!-- </div> -->
    </div>
  </div>

  <% include ../html-template/footer %>
    <!-- Footer -->
