<% include ../html-template/header %> <!--HTML Header-->

<div class="wrapper">
  <div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Welcome To CampGrounds</h1>
        <p>View our handpicked campgrounds from all over the world</p>
        <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground</a></p>
      </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% campgrounds.forEach(function(index){ %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= index.image %>" alt="">
            <div class="caption">
              <h4><%= index.name %></h4>
            </div>
            <p>
              <a href="/campgrounds/<%= index._id %>" class="btn btn-primary">More Info</a>
            </p>
          </div> <!-- end Thumbnail -->
        </div> <!-- end col-->
        <% }); %>
      </div> <!-- End row -->
    </div>   <!-- end class container -->
  </div>
    <!-- Iterate through the campground object -->
  <% include ../html-template/footer %> <!-- Footer -->
